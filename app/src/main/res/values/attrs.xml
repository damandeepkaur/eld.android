<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>

    <attr name="dutyType">
        <enum name="offDuty" value="0" />
        <enum name="sleeperBerth" value="1" />
        <enum name="driving" value="2" />
        <enum name="onDuty" value="3" />
    </attr>

    <attr name="size">
        <enum name="large" value="0" />
        <enum name="normal" value="1" />
    </attr>

    <declare-styleable name="customfont">
        <attr name="textformat" format="string"/>
    </declare-styleable>

    <declare-styleable name="MultiDirectionSlidingDrawer">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="direction" />
        <attr name="bottomOffset" format="dimension"  />
        <attr name="topOffset" format="dimension"  />
        <attr name="allowSingleTap" format="boolean" />
        <attr name="animateOnClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="font">
            <enum name="none" value="0"/>
            <enum name="sans_serif" value="1"/>
            <enum name="bebasNeue" value="2"/>
            <enum name="fonty" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SnackBarLayout">
        <attr name="sbl_text_color" format="color"/>
        <attr name="sbl_background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CalendarLayout">
        <attr name="daysCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DutyView">
        <attr name="dutyType"/>
        <attr name="size"/>
    </declare-styleable>

    <declare-styleable name="StatusView">
        <attr name="sv_text" format="string"/>
        <attr name="sv_color" format="color"/>
        <attr name="sv_background_color" format="color"/>
        <attr name="sv_line_enabled" format="boolean"/>
    </declare-styleable>

</resources>

