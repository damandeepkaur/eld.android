<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black_38"
    >

    <include layout="@layout/layout_dashboard"/>

    <android.support.v7.widget.CardView
        android:id="@+id/dashboard_indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/dashboard_indicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                tools:text="Change to on duty"
                />

            <TextView
                android:id="@+id/dashboard_indicator_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="@dimen/default_margin"
                android:drawableStart="@drawable/ic_info"
                android:gravity="start"
                android:padding="@dimen/default_margin"
                tools:text="You are currently working in Yard Movement mode"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>