<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/edit_text_margin_left"
            android:layout_marginLeft="@dimen/edit_text_margin_left"
            android:layout_marginRight="@dimen/edit_text_margin_right"
            android:layout_marginStart="@dimen/edit_text_margin_right"
            android:layout_marginTop="@dimen/text_input_username_top_margin"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Green">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="@string/login_txthint_username"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textSize="@dimen/generic_edittext_txtsize"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/edit_text_margin_left"
            android:layout_marginLeft="@dimen/edit_text_margin_left"
            android:layout_marginRight="@dimen/edit_text_margin_right"
            android:layout_marginStart="@dimen/edit_text_margin_right"
            android:layout_marginTop="@dimen/text_input_password_top_margin"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Green"
            local:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_txthint_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/generic_edittext_txtsize"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/edit_text_margin_left"
            android:layout_marginLeft="@dimen/edit_text_margin_left"
            android:layout_marginRight="@dimen/edit_text_margin_right"
            android:layout_marginStart="@dimen/edit_text_margin_right"
            android:layout_marginTop="@dimen/text_input_domain_top_margin"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Green">

            <EditText
                android:id="@+id/domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_txthint_domain"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="@dimen/generic_edittext_txtsize"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/lbl_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/edit_text_margin_left"
            android:layout_marginStart="@dimen/edit_text_margin_right"
            android:layout_marginTop="@dimen/remember_text_view_margin_top"
            android:lineSpacingExtra="@dimen/text_view_line_spacing_extra"
            android:paddingLeft="@dimen/small_margin"
            android:text="@string/login_lbl_rememberme"
            android:textColor="@color/white"
            android:textSize="@dimen/generic_edittext_txtsize"
            android:textStyle="normal"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/toggle_button_margin_right"
            android:layout_marginRight="@dimen/toggle_button_margin_right"
            android:layout_marginTop="@dimen/toggle_button_margin_top"/>
    </RelativeLayout>

    <Button
        android:id="@+id/execute_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/login_button_margin_right"
        android:layout_marginLeft="@dimen/login_button_margin_left"
        android:layout_marginRight="@dimen/login_button_margin_right"
        android:layout_marginStart="@dimen/login_button_margin_left"
        android:layout_marginTop="@dimen/login_button_margin_top"
        android:background="@color/nasty_green"
        android:gravity="center"
        android:text="@string/login_btn_login"
        android:textColor="@color/white"
        android:textSize="@dimen/generic_button_txt_size"/>

</RelativeLayout>