<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:local="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_name"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/emp_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_emp_id"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_company"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_license"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/home_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_home_addr"
                    android:theme="@style/DriverProfileEditViewStyle"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/time_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_time_zone"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin"
                local:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_password"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="?android:attr/listDivider"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/driver_profile_item_margin">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/driver_profile_item_cycle"
                    android:theme="@style/DriverProfileEditViewStyle"
                    android:editable="false"/>

            </android.support.design.widget.TextInputLayout>

            <com.bsmwireless.widgets.signview.SignatureLayout
                android:id="@+id/signature_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/driver_profile_signature_height"
                android:background="@color/signature_background"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:id="@+id/control_buttons"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@android:color/white"
                  android:layout_alignParentBottom="true"
                  android:focusableInTouchMode="true"
                  android:visibility="gone">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/driver_profile_shadow_size"
            android:background="@drawable/drop_shadow" />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="end">
            <Button android:id="@+id/clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:theme="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/cancel_color"
                    android:textSize="@dimen/driver_profile_item_value_text_size"
                    android:textStyle="normal"
                    android:letterSpacing="@dimen/driver_profile_button_letter_spacing"
                    android:text="@string/clear"/>
            <Button android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/driver_profile_item_value_text_size"
                    android:textStyle="normal"
                    android:textColor="@color/nasty_green"
                    android:letterSpacing="@dimen/driver_profile_button_letter_spacing"
                    android:text="@string/ok"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>