<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_small"
    tools:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:clickable="false"
            android:focusable="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="false"
                android:focusable="false"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/home_screen_current_status"
                    android:textAppearance="@style/AppTheme.TextAppearance.Description"/>

                <TextView
                    android:id="@+id/home_screen_current_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginStart="@dimen/default_margin"
                    android:textAllCaps="true"
                    android:textAppearance="@style/AppTheme.TextAppearance.Headline"
                    tools:text="sleep berth"
                    tools:textColor="@color/coral"/>

                <View
                    style="@style/AppTheme.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"/>

                <TextView
                    android:id="@+id/homeScreen_hours_of_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/default_margin"
                    android:text="@string/home_screen_hours_of_service"
                    android:textAppearance="@style/AppTheme.TextAppearance.Headline"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_margin">
                    <Button
                        android:id="@+id/home_screen_pre_trip"
                        style="@style/AppTheme.Widget.ButtonBordered"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_weight="1"
                        android:text="@string/home_screen_pre_trip"/>

                    <Button
                        android:id="@+id/home_screen_post_trip"
                        style="@style/AppTheme.Widget.ButtonBordered"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_weight="1"
                        android:text="@string/home_screen_post_trip"/>

                </LinearLayout>

                <View
                    style="@style/AppTheme.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"/>

                <TextView
                    android:id="@+id/home_screen_inspections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/default_margin"
                    android:text="@string/home_screen_inspections"
                    android:textAppearance="@style/AppTheme.TextAppearance.Headline"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>