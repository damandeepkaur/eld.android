<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/graph_view_top_offset"
        android:layout_marginBottom="@dimen/graph_view_bottom_offset"
        android:orientation="vertical">

        <com.bsmwireless.widgets.common.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/offduty_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/offduty_label"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/sleepingberth_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/sleepingberth_label"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/driving_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/driving_label"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/onduty_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/onduty_label"
            app:font="sans_serif"/>

    </LinearLayout>

    <com.bsmwireless.widgets.graphview.ELDGraphView
        android:id="@+id/hos_graph"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/type_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/graph_view_top_offset"
        android:layout_marginBottom="@dimen/graph_view_bottom_offset"
        android:orientation="vertical">

        <com.bsmwireless.widgets.common.FontTextView
            android:id="@+id/time_off"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/offduty_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/default_time"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:id="@+id/time_s"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/sleepingberth_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/default_time"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:id="@+id/time_dr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/driving_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/default_time"
            app:font="sans_serif"/>

        <com.bsmwireless.widgets.common.FontTextView
            android:id="@+id/time_on"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="normal"
            android:textColor="@color/onduty_light"
            android:lineSpacingExtra="@dimen/text_size_spacing"
            android:text="@string/default_time"
            app:font="sans_serif"/>

    </LinearLayout>

</LinearLayout>