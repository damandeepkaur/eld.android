<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

    <Button
        android:id="@+id/left"
        android:layout_width="@dimen/calendar_layout_side_button_size"
        android:layout_height="@dimen/calendar_layout_side_button_size"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/calendar_left_button"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calendar_layout_side_button_size"
        android:layout_marginRight="@dimen/calendar_layout_side_button_size"/>

    <Button
        android:id="@+id/right"
        android:layout_width="@dimen/calendar_layout_side_button_size"
        android:layout_height="@dimen/calendar_layout_side_button_size"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/calendar_right_button"/>

</FrameLayout>