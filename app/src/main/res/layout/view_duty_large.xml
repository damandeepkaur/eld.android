<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/duty_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/duty_title_size"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_toStartOf="@+id/duty_status"
            android:layout_toLeftOf="@+id/duty_status"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_extra_large"
            android:textColor="@color/black"
            tools:text="Driving time left"/>

        <ImageView
            android:id="@+id/duty_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_duty_status_of"/>

        <TextView
            android:id="@+id/duty_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duty_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:textSize="@dimen/duty_timer_text_size"
            android:textColor="@color/black"
            tools:text="00:12:24"/>
        
        <LinearLayout
            android:id="@+id/duty_time_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/duty_time"
            android:layout_alignEnd="@id/duty_time"
            android:layout_alignLeft="@id/duty_time"
            android:layout_alignStart="@id/duty_time"
            android:layout_alignRight="@id/duty_time"
            android:layout_marginBottom="@dimen/default_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/timer_header_color"
                android:text="@string/duty_hours"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/timer_header_color"
                android:text="@string/duty_minutes"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/timer_header_color"
                android:text="@string/duty_seconds"/>

        </LinearLayout>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/duty_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/duty_time"
            android:layout_alignLeft="@id/duty_time"
            android:layout_alignStart="@id/duty_time"
            android:layout_alignRight="@id/duty_time"
            android:layout_below="@+id/duty_time_subtitle"
            android:max="86400"
            tools:progress="56"/>

        <View
            android:id="@+id/duty_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/duty_progress"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/listviewdivider"/>

        <LinearLayout
            android:id="@+id/duty_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duty_divider"
            android:padding="@dimen/default_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/duty_selection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:textAllCaps="true"
                tools:text="Driving"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/timer_header_color"
                android:textSize="@dimen/text_size_extra_small"
                android:text="@string/duty_tap_to_change_status"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>