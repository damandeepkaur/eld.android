<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:layout_marginTop="@dimen/logs_list_item_eld_event_margin_top"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_changed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logs_list_item_eld_event_status_height"
            android:layout_marginRight="@dimen/logs_list_item_eld_event_changed_title_margin"
            android:text="@string/event_changed"
            android:textColor="@color/coral"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/event_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logs_list_item_eld_event_status_height"
            android:textColor="@color/nasty_green"
            android:textSize="@dimen/text_size_small"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logs_list_item_eld_second_line_height"
        android:layout_marginBottom="@dimen/logs_list_item_eld_second_line_margin_bottom"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:layout_marginRight="@dimen/logs_list_item_eld_event_margin_left"
        android:layout_marginTop="@dimen/logs_list_item_eld_second_line_margin_top">

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/event_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
            android:layout_toRightOf="@id/event_time"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/event_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/menu_button"
            android:layout_toRightOf="@id/event_duration"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingLeft="@dimen/logs_list_item_eld_event_margin_left"
            android:scrollHorizontally="true"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/event_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:textColor="@color/nasty_green"
            android:background="@android:color/transparent"
            android:text="@string/accept"/>

        <TextView
            android:id="@+id/event_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_toLeftOf="@+id/event_accept"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="@dimen/logs_list_item_title_margin_right"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:textColor="@color/coral"
            android:background="@android:color/transparent"
            android:text="@string/reject"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logs_list_item_eld_event_address_height"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:gravity="left"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/logs_list_item_eld_event_divider_margin_top"
        android:background="?android:attr/listDivider"/>
</LinearLayout>