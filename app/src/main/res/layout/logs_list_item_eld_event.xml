<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/event_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logs_list_item_eld_event_status_height"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:layout_marginTop="@dimen/logs_list_item_eld_event_margin_top"
        android:gravity="left"
        android:textColor="@color/nasty_green"
        android:textSize="@dimen/text_size_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logs_list_item_eld_second_line_height"
        android:layout_marginBottom="@dimen/logs_list_item_eld_second_line_margin_bottom"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:layout_marginTop="@dimen/logs_list_item_eld_second_line_margin_top">

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/event_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
            android:layout_toRightOf="@id/event_time"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_small"/>

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="@dimen/logs_list_item_eld_event_menu_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert"/>

        <TextView
            android:id="@+id/vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/menu_button"
            android:layout_toRightOf="@id/event_duration"
            android:paddingLeft="@dimen/logs_list_item_eld_event_margin_left"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_small"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logs_list_item_eld_event_address_height"
        android:layout_marginLeft="@dimen/logs_list_item_eld_event_margin_left"
        android:gravity="left"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/logs_list_item_eld_event_divider_margin_top"
        android:background="?android:attr/listDivider"/>

</LinearLayout>
